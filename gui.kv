ScreenManagement:
    MainScreen:


<MainScreen>:
    name: 'mainscreen'
    TabbedPanel:
        do_default_tab: False
        TabbedPanelItem:
            text: 'Car Info'
            on_parent: root.on_load()
            GridLayout:
                cols: 2
                Label:
                    id: speed
                    text: 'Speed: 0'
                    markup: True
                    size: 150, 50
                    size_hint: None, None
                Label:
                    id: rpm
                    text: 'RPM: 0'
                    markup: True
                    size: 150, 50
                    size_hint: None, None
                Label:
                    id: oil_temp
                    text: 'Oil Temp: 0'
                    markup: True
                    size: 150, 50
                    size_hint: None, None
                Label:
                    id: coolant_temp
                    text: 'Coolant Temp: 0'
                    markup: True
                    size: 150, 50
                    size_hint: None, None
                Label:
                    id: intake_temp
                    text: 'Intake Temp: 0'
                    markup: True
                    size: 150, 50
                    size_hint: None, None
                Label:
                    id: engine_load
                    text: ' Engine Load: 0'
                    markup: True
                    size: 150, 50
                    size_hint: None, None
                Button:
                    id: open_settings
                    text: 'Edit Settings'
                    on_release: app.open_settings()
                    size: 150,50
                    size_hint: None, None
        TabbedPanelItem:
            text: 'Advanced Info'
            GridLayout:
                cols: 1
                Label:
                    text: 'Advanced Information coming in Version 2.0.0'

